# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# 4-space indentation
indent_style = space
indent_size = 4

# Tab width
tab_width = 4

# Max line length
max_line_length = 120

# Language-specific settings
[*.py]
charset = utf-8
indent_size = 4
max_line_length = 79

[*.java]
charset = utf-8
indent_size = 4
max_line_length = 100

[*.js]
charset = utf-8
indent_size = 2
max_line_length = 100

[*.html]
charset = utf-8
indent_size = 2
max_line_length = 100

[*.css]
charset = utf-8
indent_size = 2
max_line_length = 100

[*.md]
charset = utf-8
trim_trailing_whitespace = false
max_line_length = 80

[*.json]
charset = utf-8
indent_size = 2
max_line_length = 80

[*.yaml]
charset = utf-8
indent_size = 2
max_line_length = 80

[*.xml]
charset = utf-8
indent_size = 2
max_line_length = 80

# Ignore files
[*.gitignore]
end_of_line = lf
insert_final_newline = false
trim_trailing_whitespace = false

[*.DS_Store]
end_of_line = lf
insert_final_newline = false
trim_trailing_whitespace = false

[*.tmp]
end_of_line = lf
insert_final_newline = false
trim_trailing_whitespace = false

[*.log]
end_of_line = lf
insert_final_newline = false
trim_trailing_whitespace = false

# Special settings for specific files
[README.md]
max_line_length = 80

[LICENSE]
max_line_length = 80

[CONTRIBUTING.md]
max_line_length = 80
